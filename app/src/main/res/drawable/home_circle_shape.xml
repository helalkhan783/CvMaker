<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:shape="oval">

            <solid
                android:color="#503B3B"/>

            <size
                android:width="200dp"
                android:height="200dp"/>
        </shape>
    </item>

    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape
            android:shape="oval">

            <solid
                android:color="#473939"/>

            <size
                android:width="200dp"
                android:height="200dp"/>
        </shape>
    </item>

    <item
        android:top="@dimen/two_dps"
        android:bottom="@dimen/two_dps"
        android:left="@dimen/two_dps"
        android:right="@dimen/two_dps">
        <shape
            android:shape="oval">

            <solid
                android:color="#4C4444"/>

            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#4C4444"
                android:endColor="#4C4444" />

            <size
                android:width="200dp"
                android:height="200dp"/>
        </shape>
    </item>

</layer-list>